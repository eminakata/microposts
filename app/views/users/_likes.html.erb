<% if microposts.any? %>
  <ul class="list-unstyled">
    <% microposts.each do |micropost| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= micropost.content %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate microposts %>
<% end %>